<%- include('customerHeader') -%>
<div class="container container-small">
  <form action="auth" method="POST">
      <h1>用户登录</h1>
      <div class="form-group">
          <label for="">账号</label>
          <input type="text" id="id" name="id" class="form-control"  >
          <div id="id-input-error" class="input-error" style="display:none">没有此账号</div>
      </div>
      <div class="form-group">
          <label for="">密码</label>
          <input type="text" id="pwd" name="pwd" class="form-control" onfocus="this.type='password'" >
          <div id="password-input-error" class="input-error" style="display:none">账号或密码错误</div>
      </div>
      <input class="button-control btn-block" id="login" type="submit" value="登陆">
  </form>
</div>
<%- include('customerFooter') -%>